{
    "env": {
        "es6":  true,
        "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent":               [2, 4],
        "linebreak-style":      [2, "unix"],
        "quotes":               [2, "double"],
        "semi":                 [2, "always"],
        "object-curly-spacing": [2, "always"]
    }
}
